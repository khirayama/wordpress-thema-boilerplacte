{
  "name": "wordpress-training",
  "version": "1.0.0",
  "description": "## Get started",
  "main": "index.js",
  "scripts": {
    "dev": "npm run clean && mkdir wordpress/wp-content/themes/original && npm run build && (composer run-script server & concurrently 'npm run bundle:scripts:watch' 'npm run build:styles:watch' 'npm run copy:files:watch')",
    "build": "npm run clean && (npm run bundle:scripts & npm run build:styles) && npm run copy:files",
    "clean": "rm -rf wordpress/wp-content/themes/original",
    "copy:files": "cpx 'theme/**/*' wordpress/wp-content/themes/original",
    "copy:files:watch": "cpx -w 'theme/**/*' wordpress/wp-content/themes/original",
    "bundle:scripts": "browserify src/index.js -o theme/bundle.js -t envify -t babelify",
    "bundle:scripts:watch": "watchify src/index.js -o theme/bundle.js -t envify -t babelify",
    "build:styles": "postcss -c .postcssrc.js src/styles/index.css -o theme/index.css",
    "build:styles:watch": "postcss -c .postcssrc.js -w src/styles/index.css -o theme/index.css",
    "lint": "eslint --ignore-path .gitignore src test",
    "lint:fix": "eslint --ignore-path .gitignore --fix src test",
    "check": "npm-check-updates"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.13",
    "browserify": "^14.4.0",
    "concurrently": "^3.5.0",
    "cpx": "^1.5.0",
    "cssnano": "^3.10.0",
    "envify": "^4.1.0",
    "eslint": "^4.6.1",
    "eslint-config-xo-space": "^0.16.0",
    "npm-check-updates": "^2.12.1",
    "postcss-cli": "^4.1.0",
    "postcss-easy-import": "^2.1.0",
    "postcss-nested": "^2.1.2",
    "postcss-simple-vars": "^4.1.0",
    "watchify": "^3.9.0"
  }
}
